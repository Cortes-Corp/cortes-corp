generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Agent {
  id     Int    @id @default(autoincrement())
  bio    String
  cell   String
  email  String
  name   String
  office String
  src    String
}

model chat_room {
  id                String    @id @default(dbgenerated("gen_random_uuid()")) @db.Uuid
  created_at        DateTime  @default(now()) @db.Timestamptz(6)
  members           String[]
  last_commented_at DateTime? @default(now()) @db.Timestamptz(6)
  messages          message[]
}

model message {
  id           String    @id @default(dbgenerated("gen_random_uuid()")) @db.Uuid
  created_at   DateTime  @default(now()) @db.Timestamptz(6)
  text         String?
  is_edited    Boolean?  @default(false)
  sent_by      String?
  chat_room_id String    @db.Uuid
  imgURL       String
  chat_room    chat_room @relation(fields: [chat_room_id], references: [id])
}

model contact_request {
  id           String   @id @default(dbgenerated("gen_random_uuid()")) @db.Uuid
  created_at   DateTime @default(now()) @db.Timestamptz(6)
  email        String
  phone_number String
  subject      String
  message      String
  name         String

  claimed Boolean @default(false)
  claimed_by String @default("")
}

model task {
  id           String   @id @default(dbgenerated("gen_random_uuid()")) @db.Uuid
  created_at   DateTime @default(now()) @db.Timestamptz(6)
  user_id    String    
  title String
  column String
}


model Listing {
  id        Int      @id @default(autoincrement())
  createdAt DateTime @default(now()) @map("created_at")
  address   String
  price     String
  beds      String
  footage   String
  baths     String
src String @default("")
}